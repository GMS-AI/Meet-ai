{
  "manifest_version": 3,
  "name": "Meet CC â†’ WebRTC",
  "version": "1.0.0",
  "description": "Streams Google Meet captions over WebRTC datachannel to a local FastAPI server.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": ["https://meet.google.com/*", "http://127.0.0.1/*", "http://localhost/*"],
  "action": { "default_popup": "popup.html" },
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
